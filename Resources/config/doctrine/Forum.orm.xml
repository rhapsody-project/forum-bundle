<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <document name="Rhapsody\ForumBundle\Entity\Forum" tabke="forum_forum"
        repository-class="Rhapsody\ForumBundle\Repository\ORM\ForumRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="created" fieldName="created" type="date" />
        <field name="privacy" fieldName="privacy" type="string" />

    </document>

</doctrine-mongo-mapping>
