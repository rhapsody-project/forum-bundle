<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="rhapsody_forum_user_card" path="/u/{user}/card.{_format}" methods="GET">
		<default key="_controller">RhapsodyForumBundle:User:card</default>
		<default key="_format">html</default>
	</route>

	<route id="rhapsody_forum_user_view" path="/u/{user}.{_format}" methods="GET">
		<default key="_controller">RhapsodyForumBundle:User:view</default>
		<default key="_format">html</default>
	</route>

</routes>
