<ul class="forum_categories_list">
		{% for category in categories %}
		<li>
				<div class="content">
						<a class="name" href="{{ path('rhapsody_forum_category_show', { 'category': category.slug }) }}">{{ category.name }}</a>
				</div>
				<div class="metas">
						<span class="numTopics">{{ category.numTopics }} {{ category.numTopics > 1 ? 'topics' : 'topic' }}</span>
				</div>
		</li>
		{% endfor %}
</ul>
