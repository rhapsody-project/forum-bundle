<div class="forum forum_index">
	<div class="row">
		<ul class="breadcrumb list-inline">
			<li><a href="{{ rhapsody_forum_index_url() }}">Forum</a></li>
			<li><a href="{{ rhapsody_forum_url(forum) }}">{{ forum.name }}</a></li>
		</ul>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-12">
			<h2>Forum: {{ forum.name }}</h2>
			<small>{{ forum.description }}</small>
		</div>
	</div>
	<div class="forum-nav forum-topnav">
		<nav class="navbar navbar-default">
			<ul class="nav navbar-nav navbar-left">
				<li>
					<div class="input-group">
						<div class="input-group-btn">
							<button type="button" class="btn btn-default navbar-btn" title="Follow {{ forum.name }}">
								<span class="glyphicons glyphicons-star-empty"></span> Follow
							</button>
						</div>
						<span class="form-control" style="margin-top: 8px; margin-bottom: 8px;">
							<a href="">3</a>
						</span>
					</div>
				</li>
			</ul>
			<form class="navbar-form navbar-right">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Search forum...">
					<span class="input-group-btn">
						<button class="btn btn-default" type="button"><span class="glyphicons glyphicons-search"></span></button>
					</span>
				</div>
			</form>
		</nav>
	</div>

	<div class="row">
		{{ render(controller("RhapsodyForumBundle:Topic:list", { 'forum': forum.id, 'page': page })) }}
	</div>

	<div class="forum-nav forum-bottomnav">
		<nav class="navbar navbar-default">
			<ul class="nav navbar-nav navbar-right">
				<li>
					<div class="navbar-text" style="margin: 0px 25px;">
						<a href="{{ rhapsody_forum_topic_new_url(forum) }}" class="btn btn-primary navbar-btn" title="New Topic">New Topic</a>
					</div>
				</li>
			</ul>
		</nav>
	</div>
</div>
