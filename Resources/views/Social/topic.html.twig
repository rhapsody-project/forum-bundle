{% trans_default_domain "RhapsodyForumBundle" %}

{% block rhapsody_social_attribution %}
{% endblock %}

{% block rhapsody_social_shared %}
	{% set first_post = _widget.post %}
	<a href="{{ rhapsody_forum_topic_url(_widget) }}" class="subtle">
		<div>
			<div></div>
			<div class="row">
				<h3>
					<span class="activity-media new-topic">New Topic&nbsp;</span>
					<span>{{ _widget.title }}</span>
				</h3>
				<small>(by {{ _widget.user.username }})</small>
				<p>
				{{ first_post.text|markdown_striptags|abbreviate(140, false) }}
				</p>
			</div>
		</div>
	</a>
{% endblock %}
